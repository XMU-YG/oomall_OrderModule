<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.xmu.order.mapper.OrderMapper">
    <resultMap id="OrderSnResultMap" type="String">
        <result column="order_sn" jdbcType="VARCHAR" property="orderSn" />
    </resultMap>

    <resultMap id="OrderStateResultMap" type="Byte">
        <result column="state" jdbcType="TINYINT" property="state" />
    </resultMap>

    <select id="getAllOrderStatesByCusId" resultMap="OrderStateResultMap" parameterType="java.lang.Long">
        select
        state
        from orders
        where customer_id=#{customerId,jdbcType=BIGINT}
    </select>

</mapper>